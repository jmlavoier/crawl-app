{
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "outDir": "dist",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true,
    "allowSyntheticDefaultImports" : true,
    "sourceMap": true,
    "module": "CommonJS",
    "target": "es5",
    "jsx": "react"
  }
}
